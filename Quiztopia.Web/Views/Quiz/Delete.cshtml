@model Quiztopia.Models.Quiz

@{
    ViewData["Title"] = "Delete";
}

<div class="jumbotron">

    <h1 class="display-3 pb-4">Delete</h1>
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Quiz</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TopicId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TopicId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DifficultyId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DifficultyId)
            </dd>
        </dl>

        <form asp-action="Delete">

            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Id)
            @Html.HiddenFor(m => m.Name)
            @Html.HiddenFor(m => m.TopicId)
            @Html.HiddenFor(m => m.DifficultyId)

            <input type="submit" value="Delete" class="btn btn-danger" />
            <a class="btn btn-dark" asp-action="Index">Back to List</a>
        </form>
    </div>
</div>