@model Quiztopia.Web.ViewModels.OverviewVM

@{
    ViewData["Title"] = "Overview";
}

<div class="jumbotron">

    <h1 class="display-3 pb-4">Your results</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Question</th>
                <th>Correct</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Questions.Count; i++)
            {
                <tr>
                    <td>@Model.Questions[i]</td>
                    <td>@Model.Answers[i]</td>
                </tr>
            }
        </tbody>
    </table>
    <p class="pt-4">
        <a class="btn btn-lg btn-dark" asp-controller="Quiz" asp-action="Index">Back to list</a>
    </p>
</div>
