@model Quiztopia.Web.ViewModels.QuestionAnswerVM

@{
    ViewData["Title"] = "Delete";
}

<div class="jumbotron">

    <h1 class="display-3 pb-4">Delete</h1>
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Answer.PossibleAnswer)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Answer.PossibleAnswer)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Answer.IsCorrect)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Answer.IsCorrect)
            </dd>
        </dl>

        <form asp-action="Delete">

            @Html.AntiForgeryToken()
            @Html.HiddenFor(vm => vm.Answer.Id)
            @Html.HiddenFor(vm => vm.Question.Id)
            @Html.HiddenFor(vm => vm.QuizId)

            <input type="submit" value="Delete" class="btn btn-danger" />
            <a class="btn btn-dark" asp-action="Index" asp-route-questionId="@Model.Question.Id" asp-route-quizId="@Model.QuizId">Back to List</a>
        </form>
    </div>
</div>