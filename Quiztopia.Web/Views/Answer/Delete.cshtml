@model Quiztopia.Web.ViewModels.QuestionAnswerVM

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Answer</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Answer.PossibleAnswer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Answer.PossibleAnswer)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Answer.IsCorrect)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Answer.IsCorrect)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(vm => vm.Answer.Id)
        @Html.HiddenFor(vm => vm.Answer.PossibleAnswer)
        @Html.HiddenFor(vm => vm.Answer.IsCorrect)
        @Html.HiddenFor(vm => vm.Answer.QuestionsAnswers)
        @Html.HiddenFor(vm => vm.QuestionId)
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
