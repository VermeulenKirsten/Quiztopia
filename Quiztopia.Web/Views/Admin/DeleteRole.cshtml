@model Quiztopia.Web.ViewModels.AddRoleVM

@{
    ViewData["Title"] = "DeleteRole";
}

<div class="jumbotron">

    <h1 class="display-3 pb-4">Delete</h1>
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.RoleName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RoleName)
            </dd>
        </dl>

        <form asp-action="DeleteRole">

            @Html.AntiForgeryToken()
            @Html.HiddenFor(vm => vm.RoleName)

            <input type="submit" value="Delete" class="btn btn-danger" />
            <a class="btn btn-dark" asp-action="IndexRoles">Back to List</a>
        </form>
    </div>
</div>