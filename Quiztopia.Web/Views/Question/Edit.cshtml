@model Quiztopia.Web.ViewModels.QuizQuestionVM

@{
    ViewData["Title"] = "Edit";
}

<div class="jumbotron">

    <h1 class="display-3 pb-4">Update question</h1>
    <h4>Only the question is changable</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">

                @Html.AntiForgeryToken()
                @Html.HiddenFor(vm => vm.QuizId)
                @Html.HiddenFor(vm => vm.Question.Id)
                @Html.HiddenFor(vm => vm.Question.ImageString)
                @Html.HiddenFor(vm => vm.Question.ImageData)
                @Html.HiddenFor(vm => vm.Question.QuizzesQuestions)

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Question.QuestionString" class="control-label"></label>
                    <input asp-for="Question.QuestionString" class="form-control" />
                    <span asp-validation-for="Question.QuestionString" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-success" />
                    <a class="btn btn-dark" asp-action="Index" asp-route-quizId="@Model.QuizId">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>