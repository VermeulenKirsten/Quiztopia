@model Quiztopia.Web.ViewModels.QuizQuestionVM

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" asp-route-id="@Model.QuizId">Create New</a>
</p>

<table class="table table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Question.QuestionString)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Questions)
        {
            <tr>
                <th>@Html.DisplayFor(modelItem => item.QuestionString)</th>
                <td>
                    @Html.ActionLink("Answers", "Index", "Answer", new { questionId = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { quizId = Model.QuizId, questionId = item.Id })
                </td>

            </tr>
        }
    </tbody>
</table>